// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  password    String
  fullName    String
  dateOfBirth DateTime
  county      String
  avatar      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  profile         Profile?
  publicProfile   PublicProfile?
  documents       Document[]
  githubProjects  GitHubProject[]
  upworkProjects  UpworkProject[]
  experiences     Experience[]
  applications    Application[]
  portfolioItems  PortfolioItem[]
  skills          Skill[]
  skillCategories SkillCategory[]

  @@map("users")
}

model Profile {
  id         String   @id @default(cuid())
  userId     String   @unique
  title      String? // Professional title (e.g. Frontend Developer)
  bio        String? // Short bio (max length enforced in app)
  location   String? // City / Country
  phone      String?
  avatarUrl  String? // Profile picture URL
  website    String?
  github     String?
  linkedin   String?
  otherLink  String? // Custom label link
  otherLabel String? // Label for other link
  isPublic   Boolean  @default(false) // Profile visibility
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("profiles")
}

model PublicProfile {
  id                    String   @id @default(cuid())
  userId                String   @unique
  slug                  String   @unique // URL-friendly username
  enabled               Boolean  @default(false)
  seoIndexable          Boolean  @default(false)
  showProfile           Boolean  @default(true)
  showSkills            Boolean  @default(true)
  showExperience        Boolean  @default(true)
  showProjects          Boolean  @default(true)
  showContact           Boolean  @default(false)
  allowCvRequest        Boolean  @default(false)
  selectedProjectIds    String[] @default([]) // IDs of projects to show publicly
  selectedExperienceIds String[] @default([]) // IDs of experiences to show publicly
  selectedCvId          String? // ID of CV document to allow download
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("public_profiles")
}

model Document {
  id        String   @id @default(cuid())
  userId    String
  name      String
  type      String // 'CV' | 'COVER_LETTER' | 'OTHER'
  fileUrl   String
  fileType  String // 'pdf' | 'doc' | 'docx' | 'png' | 'jpg' | 'jpeg'
  fileSize  Int // in bytes
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("documents")
}

model GitHubProject {
  id            String   @id @default(cuid())
  userId        String
  name          String
  description   String?
  url           String
  repositoryUrl String
  language      String?
  stars         Int      @default(0)
  forks         Int      @default(0)
  isPublic      Boolean  @default(true)
  syncedAt      DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("github_projects")
}

model UpworkProject {
  id            String    @id @default(cuid())
  userId        String
  title         String
  description   String?
  clientName    String?
  startDate     DateTime?
  endDate       DateTime?
  status        String    @default("active") // active, completed, cancelled
  hourlyRate    Float?
  totalEarnings Float?
  url           String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("upwork_projects")
}

model Experience {
  id             String    @id @default(cuid())
  userId         String
  company        String
  role           String
  employmentType String // Full-time, Contract, Freelance, Internship
  location       String?
  startDate      DateTime
  endDate        DateTime?
  bullets        String[]  @default([]) // Ordered list of responsibility/achievement bullets
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  user               User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  experienceProjects ExperienceProject[]

  @@map("experiences")
}

model ExperienceProject {
  id           String   @id @default(cuid())
  experienceId String
  projectId    String // References portfolio items
  projectType  String   @default("portfolio") // 'portfolio' | 'github' | 'upwork'
  createdAt    DateTime @default(now())

  experience Experience @relation(fields: [experienceId], references: [id], onDelete: Cascade)

  @@unique([experienceId, projectId, projectType])
  @@map("experience_projects")
}

model Application {
  id             String    @id @default(cuid())
  userId         String
  company        String
  role           String
  location       String?
  status         String    @default("draft") // draft, applied, interview, offer, rejected, withdrawn
  appliedAt      DateTime?
  link           String?
  notes          String?
  recruiterName  String?
  recruiterEmail String?
  followUpAt     DateTime?
  isArchived     Boolean   @default(false)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  user      User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  documents ApplicationDocument[]

  @@map("applications")
}

model ApplicationDocument {
  id            String   @id @default(cuid())
  applicationId String
  documentId    String? // nullable if not saved globally
  type          String // 'CV' | 'COVER_LETTER'
  fileUrl       String
  fileName      String
  fileType      String
  fileSize      Int
  createdAt     DateTime @default(now())

  application Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  @@map("application_documents")
}

model PortfolioItem {
  id                  String    @id @default(cuid())
  userId              String
  title               String
  description         String?
  detailedDescription String? // Longer description/impact
  type                String // personal, freelance, client, company, academic, other
  imageUrl            String?
  url                 String? // External link (GitHub, live demo, case study)
  tags                String[]  @default([]) // Tech stack
  isPublished         Boolean   @default(false) // Visibility: public/private
  startDate           DateTime?
  endDate             DateTime?
  order               Int       @default(0)
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("portfolio_items")
}

model SkillCategory {
  id        String   @id @default(cuid())
  userId    String
  name      String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  skills Skill[]

  @@map("skill_categories")
}

model Skill {
  id              String    @id @default(cuid())
  userId          String
  categoryId      String
  name            String
  level           Int // 1-5 proficiency level
  yearsExperience Int?
  description     String?
  lastUsedAt      DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  category      SkillCategory  @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  projectSkills ProjectSkill[]

  @@unique([userId, name])
  @@map("skills")
}

model ProjectSkill {
  id          String   @id @default(cuid())
  skillId     String
  projectId   String // References portfolio items or projects
  projectType String // 'portfolio' | 'github' | 'upwork'
  createdAt   DateTime @default(now())

  skill Skill @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@unique([skillId, projectId, projectType])
  @@map("project_skills")
}
