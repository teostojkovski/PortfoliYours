generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  password    String
  fullName    String
  dateOfBirth DateTime
  county      String
  avatar      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  profile         Profile?
  publicProfile   PublicProfile?
  documents       Document[]
  githubProjects  GitHubProject[]
  upworkProjects  UpworkProject[]
  experiences     Experience[]
  applications    Application[]
  portfolioItems  PortfolioItem[]
  skills          Skill[]
  skillCategories SkillCategory[]

  @@map("users")
}

model Profile {
  id         String   @id @default(cuid())
  userId     String   @unique
  title      String?
  bio        String?
  location   String?
  phone      String?
  avatarUrl  String?
  website    String?
  github     String?
  linkedin   String?
  otherLink  String?
  otherLabel String?
  isPublic   Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("profiles")
}

model PublicProfile {
  id                    String   @id @default(cuid())
  userId                String   @unique
  slug                  String   @unique
  enabled               Boolean  @default(false)
  seoIndexable          Boolean  @default(false)
  showProfile           Boolean  @default(true)
  showSkills            Boolean  @default(true)
  showExperience        Boolean  @default(true)
  showProjects          Boolean  @default(true)
  showContact           Boolean  @default(false)
  allowCvRequest        Boolean  @default(false)
  selectedProjectIds    String[] @default([])
  selectedExperienceIds String[] @default([])
  selectedCvId          String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("public_profiles")
}

model Document {
  id        String   @id @default(cuid())
  userId    String
  name      String
  type      String
  fileUrl   String
  fileType  String
  fileSize  Int
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("documents")
}

model GitHubProject {
  id            String   @id @default(cuid())
  userId        String
  name          String
  description   String?
  url           String
  repositoryUrl String
  language      String?
  stars         Int      @default(0)
  forks         Int      @default(0)
  isPublic      Boolean  @default(true)
  syncedAt      DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("github_projects")
}

model UpworkProject {
  id            String    @id @default(cuid())
  userId        String
  title         String
  description   String?
  clientName    String?
  startDate     DateTime?
  endDate       DateTime?
  status        String    @default("active")
  hourlyRate    Float?
  totalEarnings Float?
  url           String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("upwork_projects")
}

model Experience {
  id             String    @id @default(cuid())
  userId         String
  company        String
  role           String
  employmentType String
  location       String?
  startDate      DateTime
  endDate        DateTime?
  bullets        String[]  @default([])
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  user               User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  experienceProjects ExperienceProject[]
  experienceSkills   ExperienceSkill[]

  @@map("experiences")
}

model ExperienceProject {
  id           String   @id @default(cuid())
  experienceId String
  projectId    String
  projectType  String   @default("portfolio")
  createdAt    DateTime @default(now())

  experience Experience @relation(fields: [experienceId], references: [id], onDelete: Cascade)

  @@unique([experienceId, projectId, projectType])
  @@map("experience_projects")
}

model ExperienceSkill {
  id           String   @id @default(cuid())
  experienceId String
  skillId      String
  createdAt    DateTime @default(now())

  experience Experience @relation(fields: [experienceId], references: [id], onDelete: Cascade)
  skill      Skill      @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@unique([experienceId, skillId])
  @@map("experience_skills")
}

model Application {
  id             String    @id @default(cuid())
  userId         String
  company        String
  role           String
  location       String?
  status         String    @default("draft")
  appliedAt      DateTime?
  link           String?
  notes          String?
  recruiterName  String?
  recruiterEmail String?
  followUpAt     DateTime?
  isArchived     Boolean   @default(false)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  user      User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  documents ApplicationDocument[]

  @@map("applications")
}

model ApplicationDocument {
  id            String   @id @default(cuid())
  applicationId String
  documentId    String?
  type          String
  fileUrl       String
  fileName      String
  fileType      String
  fileSize      Int
  createdAt     DateTime @default(now())

  application Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  @@map("application_documents")
}

model PortfolioItem {
  id                  String    @id @default(cuid())
  userId              String
  title               String
  description         String?
  detailedDescription String?
  type                String
  imageUrl            String?
  url                 String?
  tags                String[]  @default([])
  isPublished         Boolean   @default(false)
  startDate           DateTime?
  endDate             DateTime?
  order               Int       @default(0)
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("portfolio_items")
}

model SkillCategory {
  id        String   @id @default(cuid())
  userId    String
  name      String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  skills Skill[]

  @@map("skill_categories")
}

model Skill {
  id              String    @id @default(cuid())
  userId          String
  categoryId      String
  name            String
  level           Int
  yearsExperience Int?
  description     String?
  lastUsedAt      DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  category         SkillCategory     @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  projectSkills     ProjectSkill[]
  experienceSkills ExperienceSkill[]

  @@unique([userId, name])
  @@map("skills")
}

model ProjectSkill {
  id          String   @id @default(cuid())
  skillId     String
  projectId   String
  projectType String
  createdAt   DateTime @default(now())

  skill Skill @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@unique([skillId, projectId, projectType])
  @@map("project_skills")
}
